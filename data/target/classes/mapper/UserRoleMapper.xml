<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.detectivehlh.springbootdemo.data.dao.UserRoleMapper">

    <resultMap id="userRoleMap" type="com.detectivehlh.springbootdemo.domain.entity.UserRole">
        <result column="id" property="id"/>
        <result column="name" property="name"/>
    </resultMap>

    <sql id="allColumns">
        id, name
    </sql>

    <sql id="tableName">
        user_role
    </sql>

    <select id="queryAccessableRolesByUserId" resultType="java.lang.Integer">
        SELECT role FROM
        <include refid="tableName"/>
        WHERE user_id = #{userId}
    </select>

    <select id="queryByUserId" resultMap="userRoleMap">
        SELECT
        <include refid="allColumns"/>
        FROM
        <include refid="tableName"/>
        WHERE
        user_id = #{userId}
    </select>

    <select id="all" resultMap="userRoleMap">
        SELECT
        <include refid="allColumns"/>
        FROM
        <include refid="tableName"/>
        ORDER BY id DESC
    </select>

    <insert id="add">
        INSERT INTO
        <include refid="tableName"/>
        (<include refid="allColumns"/>)
        VALUES(#{role}, #{userId}, #{createdAt}, #{createdBy}, #{updatedAt}, #{updatedBy})
    </insert>

    <update id="edit">
        UPDATE
        <include refid="tableName"/>
        SET
        role = #{role},
        updated_at = #{updatedAt},
        updated_by = #{updatedBy}
        WHERE
        user_id = #{userId}
    </update>
    <delete id="del">
        DELETE FROM user_role WHERE `user_id` = #{userId}
    </delete>
</mapper>